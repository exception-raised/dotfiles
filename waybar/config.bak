{
    "layer": "top",   
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 40,
    "margin-bottom": 5,
    "fixed-center": true,
    "modules-left": ["custom/dash", "hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["clock", "cpu", "memory", "backlight","pulseaudio","pulseaudio#microphone", "network",  "tray", "custom/powermenu"],
    
    "hyprland/window": {
    "format": "ó°£‡ {initialTitle}",
    "rewrite": {
        "(.*) - fish": "> [$1]"
    },
    "separate-outputs": true
},

    "hyprland/workspaces": {
        "disable-scroll": true,
        "format": "{icon}",
	"format-active": "{icon}",
        "all-outputs": true,
        "on-click": "activate"
    },
    
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
 
    "custom/dash": {
       "format": "ïŒ¢  {}", 
       "on-click": "wofi --show drun -s ~/.config/wofi/style.css"
    },

    "cpu" : {
      "interval": 1,
      "format": "{icon0}{icon1}{icon2}{icon3}",
      "format-icons": ["â–", "â–‚", "â–ƒ", "â–„", "â–…", "â–†", "â–‡", "â–ˆ"],
      "min-length": 6,
      "max-length": 25,
      "on-click": "kitty --class system_monitor -e btop"
    },
    "memory": {
      "format": "ïˆ³ {percentage}%",
      "interval": 1,
      "on-click": "kitty --class system_monitor -e btop",
      "max-lenght": 25,
      "min-length": 6
    },
    "custom/powermenu": {
      "format": "ï€‘  {}",
      "on-click": "wlogout"
    },

    "clock": {
        "format": "ï€—  {:%H:%M }",
        "format-alt":"ï³  {:%a, %b %e }",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "backlight": {
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "format-icons": ["ï—", "ï—", "ï—Ÿ"],
      "on-scroll-up": "brightnessctl set 1%+",
      "on-scroll-down": "brightnessctl set 1%-",
      "min-length": 6
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "ï‡¦ {capacity}%",
        "format-plugged": "ï‡¦ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï–", "ï•¹", "ï•º", "ï•»", "ï•¼", "ï•½", "ï•¾", "ï•¿", "ï–€", "ï–", "ï•¸"]
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ï€¦ Muted",
        "on-click": "pamixer -t",
        "on-right-click": "exec pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï€¥",
            "headset": "ï€¥",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦ ", "ï€§ ", "ï€¨ "]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ó°® {volume}%",
        "format-source-muted": "ó°® Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },
    
    "network": {
      "interface": "eno1",
      "format-wifi": "ï‡« ",
      "format-disconnected": "ó±š¼  ",
      "tooltip-format": "{ifname} via {gwaddr} ï–",
      "tooltip-format-wifi": "{essid} {signalStrength}%",
      "on-click": "kitty --class network -e nmtui",
      "format": "ï‡« "
  },

    "bluetooth": {
	    "format": "ïŠ” {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "ïŠ” {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "ïŠ” {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },
     
    "mpris": {
      "title-len": 40,
      "interval":1,
      "album-len":0,
      "max-len": 60,
      "format": "{player_icon} {artist} - {title}",
      "format-paused": "{player_icon} {artist} - {title}",
      "player-icons": {
        "default": "â–¶",
        "mpv": "ğŸµ",
        "spotify": "ï†¼ ",
        "firefox": "ï‰©",
      },
      "status-icons": {
        "paused": "î«‘"
      },
      "ignored-players": ["vlc", "firefox", "brave"]
    },
     
    "mpd": {
      "format": "{stateIcon} {artist} - {title}",
      "format-disconnected": "Disconnected ï€",
      "format-stopped": "{stateIcon} {artist} - {title}",
      "interval": 2,
      "consume-icons": {
        "on": "ïƒ„ " // Icon shows only when "consume" is on
      },
      "repeat-icons": {
        "on": "ï€ "
      },
      "single-icons": {
        "on": "ï€ 1 "
      },
      "state-icons": {
        "paused": "î«‘ ",
        "playing": "ï‹ "
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)"
    },

    "custom/pacman": {
      "format": "ï„¹  {}",
      "interval" : 100,
      "exec" : "~/.local/scripts/checkupdate",
      "exec-if" : "exit 0",
      "on-click": "alacritty -e paru"
    },
    
   "custom/pomodoro": {
      "exec": "i3-gnome-pomodoro status --format=waybar --show-seconds | awk '{gsub(/Pomodoro /,\"\")}1'",
       "return-type": "json",
       "interval": 1,
       "format": "ï€— {}",
       "on-click": "i3-gnome-pomodoro toggle",
       "on-middle-click": "i3-gnome-pomodoro stop",
       "on-right-click": "i3-gnome-pomodoro start-stop"
    }
    
}
